{% action "siteverify" %}
var token = getProp('token');
var verif = false;
verif = callAPI('POST', site.metafields.google.rc_api, {
  data: {
    'secret': site.metafields.google.rc_secret_key,
    'response': token
  },
  headers: {
    'Content-Type': 'application/x-www-form-urlencoded; charset=utf-8'
  }
});
setProp('data', verif);
{% endaction %}
